<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-9 mt-3">
      <%= paginate @posts %>
    </div>
    <% @posts.each do |post| %>
      <div class="col-md-9 mb-4 py-3 border">
        <table class="table table-sm">
          <tbody>
          <tr>
            <th scope="row">内容：</th>
            <td><%= post.content %></td>
          </tr>
          <tr>
            <th scope="row">ユーザ名：</th>
            <td><%= post.user.name %></td>
          </tr>
          </tbody>
        </table>
        <% if @current_user && post.user == @current_user %>
          <%= link_to("編集", edit_post_path(post), class: "btn btn-primary") %>
          <%= link_to("削除", post_path(post), method: :delete, class: "btn btn-danger") %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

