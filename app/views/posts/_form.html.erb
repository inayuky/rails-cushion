<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-9 mt-4 py-3 border">
      <%= form_with(model: @post, local: true) do |f| %>
        <div class="form-group">
          <%= f.label :content, "内容" %>
          <%= f.text_area :content, class: "form-control", placeholder: "Compose new post...", style: "height: 160px" %>
        </div>
        <%= f.submit yield(:button_text), class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>