<div class="container">
  <div class="row">
    <div class="col-md-4 mt-4 mx-2 py-3">
      <h5>ユーザ情報</h5>
      <div class="mt-3">
        <table class="table table-sm">
          <tbody>
          <tr>
            <th scope="row">名前：</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th scope="row">Eメール：</th>
            <td><%= @user.email %></td>
          </tr>
          </tbody>
        </table>
        <% if @current_user && @user == @current_user %>
          <%= link_to("編集", edit_user_path, class: "btn btn-primary") %>
          <%= link_to("削除", user_path, class: "btn btn-danger") %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6 mt-4 mx-2 py-3">
      <h5>投稿一覧</h5>
      <div class="mt-3">
        <% @user.posts.each do |post| %>
          <div class="mb-5">
            <table class="table table-sm">
              <tbody>
              <tr>
                <th scope="row">内容：</th>
                <td><%= post.content %></td>
              </tr>
              <tr>
                <th scope="row">投稿日時：</th>
                <td><%= time_ago_in_words post.created_at %></td>
              </tr>
              </tbody>
            </table>
            <% if @current_user && @user == @current_user %>
              <%= link_to("編集", edit_post_path(post), class: "btn btn-primary") %>
              <%= link_to("削除", post_path(post), method: :delete, class: "btn btn-danger") %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

